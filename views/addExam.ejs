<!-- Pagina per aggiungere nuovi esami -->
<!-- Accessibile solo all'amministratore -->

<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs', {title: 'Aggiungi Esame'}); %>
    <link href="css/administrator.css" rel="stylesheet" type="text/css">
</head>

<body>
<div class="fixed-top">
<%- include('partials/user.ejs'); %>

    <div class="container user">
        <nav class="navbar navbar-expand-md bg-primary navbar-dark rounded w-100">
            <a class="navbar-brand"><i class="material-icons">school</i></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/addStudent">Aggiungi Studente</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/remStudent">Rimuovi Studente</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/addExam">Aggiungi Esame</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/regGrade">Registra Voto</a>
                    </li>

                </ul>
            </div>
        </nav>
    </div>
</div>

<div class="container">
    <form class="form-admin" method="post">
        <h2 class="text-center">Aggiungi Esame</h2>
        <%- include('partials/error.ejs', {action: 'addExam'})%>
        <%- include('partials/success.ejs', {action: 'addExam'})%>
        <div class="form-group">
            <label for="nome">Esame:</label>
            <input type="text" class="form-control" id="nome" name="nome" required autofocus>
        </div>
        <div class="form-group">
            <label for="facolta">Facoltà:</label>
            <select class="form-control" name="facolta" id="facolta" required>
                <option disabled selected value> -- selezionare una facoltà -- </option>
                <option value="ingegneria">Ingegneria</option>
                <option value="medicina">Medicina</option>
                <option value="lettere">Lettere</option>
            </select>
        </div>
        <div class="form-group">
            <label for="data">Data:</label>
            <input type="date" class="form-control" id="data" name="data" required>
        </div>
        <div class="form-group">
            <label for="posti">Numero posti:</label>
            <input type="number" class="form-control" id="posti" name="posti" min="1" required>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-lg btn-primary">Aggiungi</button>
        </div>
    </form>
</div>
</body>
</html>