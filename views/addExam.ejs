<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs', {title: 'Aggiungi Esame'}); %>
    <link href="css/administrator.css" rel="stylesheet" type="text/css">
</head>

<body>
<div class="fixed-top">
<%- include('partials/user.ejs'); %>

    <div class="container">
    <div class="btn-group btn-group-lg w-100">
        <a class="btn btn-primary" href="/addStudent">Aggiungi Studente</a>
        <a class="btn btn-primary" href="/remStudent">Rimuovi Studente</a>
        <a class="btn btn-primary active">Aggiungi Esame</a>
        <a class="btn btn-primary" href="/regGrade">Registra Voto</a>
    </div>
    </div>
</div>

<div class="container">
    <form class="form-admin" method="post">
        <h2 class="text-center">Aggiungi Esame</h2>
        <div class="form-group">
            <label for="nome">Esame:</label>
            <input type="text" class="form-control" id="nome" name="nome" required autofocus>
        </div>
        <div class="form-group">
            <label for="facolta">Facoltà:</label>
            <select class="form-control" name="facolta" id="facolta" required>
                <option disabled selected value> -- selezionare una facoltà -- </option>
                <option value="ingegneria">Ingegneria</option>
                <option value="medicina">Medicina</option>
                <option value="lettere">Lettere</option>
            </select>
        </div>
        <div class="form-group">
            <label for="data">Data:</label>
            <input type="date" class="form-control" id="data" name="data" required>
        </div>
        <div class="form-group">
            <label for="posti">Numero posti:</label>
            <input type="number" class="form-control" id="posti" name="posti" min="1" required>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-lg btn-primary">Aggiungi</button>
        </div>
    </form>
    <%- include('partials/error.ejs', {action: 'addExam'})%>
</div>
</body>
</html>