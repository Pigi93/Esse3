<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs', {title: 'Registra voto'}); %>
<body>

<div class="btn-group btn-group-lg w-100 p-3">
    <button class="btn btn-primary" href="/addStudent">Aggiungi Studente</button>
    <button class="btn btn-primary" href="/remStudent">Rimuovi Studente</button>
    <button class="btn btn-primary" href="/addExam">Aggiungi Esame</button>
    <button class="btn btn-primary active">Registra Voto</button>
</div>

<div class="container w-100">
    <h2 class="float-right"><%= locals.nome %> <%= locals.cognome %></h2>
</div>



<div class="container">
    <h2>Registra voto</h2>
    <form method="post">
        <div class="form-group">
            <label for="matricola">Matricola studente:</label>
            <input type="number" class="form-control" name="matricolaRegistraVoto" required>
        </div>
        <div class="form-group">
            <label for="esame">Esame:</label>
            <input type="text" class="form-control" name="esameRegistraVoto" required>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col-11">
                    <label for="voto">Voto:</label>
                    <input type="number" class="form-control" name="votoRegistraVoto" required>
                </div>
                <div class="col-1 text-center">
                    <label for="lode" >Lode:</label>
                    <input type="checkbox" class="form-control" name="lodeRegistraVoto">
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Registra</button>
        </div>
        <%- include('partials/error.ejs', {action: 'regGrade'})%>
    </form>
</div>

</body>
</html>