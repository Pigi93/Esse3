<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs', {title: 'Libretto'}); %>
    <link href="css/student.css" rel="stylesheet" type="text/css">
</head>

<body>
<div class="fixed-top">
<%- include('partials/user.ejs'); %>
    <div class="container">
    <div class="btn-group btn-group-lg w-100">
        <a class="btn btn-primary" href="/exams">Prenota Esame</a>
        <a class="btn btn-primary" href="/registrations">Iscrizioni</a>
        <a class="btn btn-primary active">Libretto</a>
    </div>
    </div>
</div>

<div class="container student">
    <h2 class="text-center">Libretto</h2>
    <% if(locals.myPassed.length === 0) {%>
        <h3 class="text-center">Nessun voto registrato</h3>
    <% } %>
    <% for(var i=0; i < locals.myPassed.length; i++) {%>
    <div class="container border border-primary rounded exam" >
        <h3> <%= locals.myPassed[i].esame %> </h3>
        <% if(locals.myPassed[i].lode === true) {%>
            <h5> Valutazione: <%= locals.myPassed[i].voto %> e lode</h5>
        <% }else{ %>
            <h5> Valutazione: <%= locals.myPassed[i].voto %></h5>
        <% } %>
    </div>
    <% } %>
</div>

</body>
</html>