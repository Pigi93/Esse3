<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs', {title: 'Registra Voto'}); %>
    <link href="css/administrator.css" rel="stylesheet" type="text/css">
</head>
<body>
<div class="fixed-top">
<%- include('partials/user.ejs'); %>

    <div class="container">
        <nav class="navbar navbar-expand-md bg-primary navbar-dark rounded w-100">
            <a class="navbar-brand"><i class="material-icons">school</i></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/addStudent">Aggiungi Studente</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/remStudent">Rimuovi Studente</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/addExam">Aggiungi Esame</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/regGrade">Registra Voto</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</div>

<div class="container">
    <form class="form-admin" method="post">
        <h2 class="text-center">Registra Voto</h2>
        <div class="form-group">
            <label for="studente">Matricola studente:</label>
            <input type="number" class="form-control" id="studente" name="studente" min="10000" max="9999999"required autofocus>
        </div>
        <div class="form-group">
            <label for="esame">Esame:</label>
            <input type="text" class="form-control" id="esame" name="esame" required>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col-10">
                    <label for="voto">Voto:</label>
                    <input type="number" class="form-control" id="voto" name="voto" min="18" max="30" required>
                </div>
                <div class="col text-center">
                    <label for="lode" >Lode:</label>
                    <input type="checkbox" class="form-control" id="lode" name="lode">
                </div>
            </div>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-lg btn-primary">Registra</button>
        </div>
    </form>
    <%- include('partials/error.ejs', {action: 'regGrade'})%>
</div>
</body>
</html>