<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs', {title: 'Rimuovi studente'}); %>
<body>
<%- include('partials/user.ejs'); %>

<div class="btn-group btn-group-lg w-100 p-3">
    <a class="btn btn-primary" href="/addStudent">Aggiungi Studente</a>
    <a class="btn btn-primary active">Rimuovi Studente</a>
    <a class="btn btn-primary" href="/addExam">Aggiungi Esame</a>
    <a class="btn btn-primary" href="/regGrade">Registra Voto</a>
</div>

<div class="container w-100">
    <h2 class="float-right"><%= locals.nome %> <%= locals.cognome %></h2>
</div>



<div class="container">
    <h2>Rimuovi studente</h2>
    <form method="post">
        <div class="form-group">
            <label for="matricola">Matricola:</label>
            <input type="number" class="form-control" id="matricola" name="matricola" required>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Rimuovi</button>
        </div>
        <%- include('partials/error.ejs', {action: 'remStudent'})%>
    </form>
</div>

</body>
</html>